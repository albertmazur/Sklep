<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="am.sklep.controller.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%file">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="%close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%edit">
               <items>
                  <RadioMenuItem mnemonicParsing="false" onAction="#setCaspian" text="%caspian">
                     <toggleGroup>
                        <ToggleGroup fx:id="styleCroup" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" onAction="#setModena" selected="true" text="%modena" toggleGroup="$styleCroup" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="%help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#about" text="%about_title" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox spacing="20.0">
         <children>
            <ToggleButton cache="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#productsOnAction" selected="true" text="%products_to_buy">
               <toggleGroup>
                  <ToggleGroup fx:id="menuToggleButton" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#basketOnAction" text="%basket" toggleGroup="$menuToggleButton" />
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#boughtOnAction" text="%my_products" toggleGroup="$menuToggleButton" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addProductsOnAction" text="%add_product" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#settingOnAction" text="%account_setup" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#showAddBalanceOnAction" text="%add_balance" />
            <VBox fx:id="VBoxAddBalance" alignment="CENTER" spacing="5.0" visible="false">
               <children>
                  <Label text="%add_balance">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addBalanceOnAction" text="-" />
                        <Label fx:id="addBalanceLabel" text="0.00" />
                        <Button mnemonicParsing="false" onAction="#addBalanceOnAction" text="+" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#updateBalanceOnAction" text="%top_up" />
               </children>
            </VBox>
            <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#logoutOnAction" text="%log_out" />
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <center>
      <VBox BorderPane.alignment="TOP_LEFT">
         <children>
            <TableView fx:id="tableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="nameColumn" minWidth="-Infinity" prefWidth="-1.0" styleClass="table_column" text="%name" />
                <TableColumn fx:id="descColumn" minWidth="-1.0" prefWidth="-1.0" styleClass="table_column" text="%description" />
                  <TableColumn fx:id="priceColumn" prefWidth="-1.0" styleClass="table_column" text="%price" />
                  <TableColumn fx:id="statusColumn" prefWidth="-1.0" styleClass="table_column" text="%status" />
                  <TableColumn fx:id="sellerColumn" prefWidth="-1.0" styleClass="table_column" text="%seller" />
                  <TableColumn fx:id="buyColumn" prefWidth="-1.0" styleClass="table_column" />
              </columns>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="editProductMenuItem" mnemonicParsing="false" onAction="#editProductOnAction" text="Edytuj przedmiot" />
                    </items>
                  </ContextMenu>
               </contextMenu>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="BOTTOM_LEFT" fillHeight="false" spacing="20.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                           <children>
                              <Label fx:id="sumLabel" text="Suma: " visible="false" />
                              <Label fx:id="sumViewLabel" visible="false">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="currencyLabel" text=" zł" visible="false">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label fx:id="balanceFailedLabel" text="%not_balance" textFill="RED" visible="false" />
                         <Button fx:id="buyButton" mnemonicParsing="false" onAction="#buyOnAction" text="%buy" visible="false">
                           <HBox.margin>
                              <Insets left="15.0" right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Label text="%acc_balance">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Label>
                         <Label fx:id="balanceLabel" maxWidth="-Infinity">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text=" zł">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
