<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="am.sklep.controller.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox spacing="20.0">
         <children>
            <ToggleButton cache="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#productsOnAction" selected="true" text="Produkty do kupienia">
               <toggleGroup>
                  <ToggleGroup fx:id="menuToggleButton" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#basketOnAction" text="Koszyk" toggleGroup="$menuToggleButton" />
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#boughtOnAction" text="Moje produkty" toggleGroup="$menuToggleButton" />
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addProductsOnAction" text="Dodane przedmioty" toggleGroup="$menuToggleButton" />
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#settingOnAction" text="Ustawienia konta" toggleGroup="$menuToggleButton" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TableView fx:id="tableView" editable="true" BorderPane.alignment="TOP_LEFT">
        <columns>
          <TableColumn fx:id="nameColumn" text="Nazwa" />
          <TableColumn fx:id="descColumn" prefWidth="160.0" text="Opis" />
            <TableColumn fx:id="priceColumn" text="Cena (zł)" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="sellerColumn" text="Sprzedający" />
            <TableColumn fx:id="buyColumn" prefWidth="150.0" text="Akcja" />
        </columns>
      </TableView>
   </center>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <bottom>
      <HBox alignment="BOTTOM_LEFT" fillHeight="false" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#logoutOnAction" text="Wyloguj się" />
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="balanceFailedLabel" text="Nie masz wystarczających środków na koncie" textFill="RED" visible="false" />
                   <Button fx:id="buyButton" mnemonicParsing="false" onAction="#buyOnAction" text="Kup" visible="false">
                     <HBox.margin>
                        <Insets left="15.0" right="15.0" />
                     </HBox.margin></Button>
                  <Label text="Stan konta:">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Label>
                   <Label fx:id="balanceLabel" maxWidth="-Infinity">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font></Label>
                  <Label text=" zł">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
