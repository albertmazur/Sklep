<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="am.sklep.controller.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="Zamknij" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edtyuj">
               <items>
                  <RadioMenuItem mnemonicParsing="false" onAction="#setCaspian" text="Caspian">
                     <toggleGroup>
                        <ToggleGroup fx:id="styleCroup" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem mnemonicParsing="false" onAction="#setModena" selected="true" text="Modena" toggleGroup="$styleCroup" />
               </items></Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox spacing="20.0">
         <children>
            <ToggleButton cache="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#productsOnAction" selected="true" text="Produkty do kupienia">
               <toggleGroup>
                  <ToggleGroup fx:id="menuToggleButton" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#basketOnAction" text="Koszyk" toggleGroup="$menuToggleButton" />
            <ToggleButton maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#boughtOnAction" text="Moje produkty" toggleGroup="$menuToggleButton" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addProductsOnAction" text="Dodane przedmioty" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#settingOnAction" text="Ustawienia konta" />
            <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
               <children>
                  <Button mnemonicParsing="false" onAction="#logoutOnAction" text="Wyloguj się" />
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <center>
      <VBox BorderPane.alignment="TOP_LEFT">
         <children>
            <TableView fx:id="tableView" editable="true" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="nameColumn" text="Nazwa" />
                <TableColumn fx:id="descColumn" prefWidth="160.0" text="Opis" />
                  <TableColumn fx:id="priceColumn" text="Cena (zł)" />
                  <TableColumn fx:id="statusColumn" text="Status" />
                  <TableColumn fx:id="sellerColumn" text="Sprzedający" />
                  <TableColumn fx:id="buyColumn" prefWidth="150.0" text="Akcja" />
              </columns>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="editProductMenuItem" mnemonicParsing="false" onAction="#editProductOnAction" text="Edytuj przedmiot" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TableView>
            <HBox alignment="BOTTOM_LEFT" fillHeight="false" spacing="20.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                           <children>
                              <Label fx:id="sumLabel" text="Suma: " visible="false" />
                              <Label fx:id="sumViewLabel" visible="false">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="currencyLabel" text=" zł" visible="false">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label fx:id="balanceFailedLabel" text="Nie masz wystarczających środków na koncie" textFill="RED" visible="false" />
                         <Button fx:id="buyButton" mnemonicParsing="false" onAction="#buyOnAction" text="Kup" visible="false">
                           <HBox.margin>
                              <Insets left="15.0" right="15.0" />
                           </HBox.margin>
                        </Button>
                        <Label text="Stan konta:">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Label>
                         <Label fx:id="balanceLabel" maxWidth="-Infinity">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text=" zł">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
